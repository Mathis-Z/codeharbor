<% @exercises.each do |exercise| %>
  <div class="panel panel-default" style="margin-top: 40px">
   <div class="panel-heading">
       <h3 class="panel-title"> <span><%= link_to exercise.title%></span>
            <span class="star-rating">
              <span class="fa fa-star-o" data-rating="1"></span>
              <span class="fa fa-star-o" data-rating="2"></span>
              <span class="fa fa-star-o" data-rating="3"></span>
              <span class="fa fa-star-o" data-rating="4"></span>
              <span class="fa fa-star-o" data-rating="5"></span>
              <input type="hidden" name="whatever" class="rating-value" value="3">
            </span>
       </h3>
   </div>

    <div class="panel-body">

      <div class="col-md-10">
        <%= exercise.description %>
      </div>

      <div class="btn-group-vertical pull-right" role="group" aria-label="...">
        <%= link_to "Select", exercise_path(exercise), class:'btn btn-default' %>
        <%= link_to "Edit", edit_exercise_path(exercise), class:'btn btn-default' %>
        <%= link_to "Rate", ratings_path, class:'btn btn-default' %>
        <%= link_to "Comment", comments_path, class:'btn btn-default' %>
      </div>

      <div class="col-md-6">
        <% exercise.labels.each do |label| %>
            <span class="label " style="background-color: #{<%= label.color %>}; color: #fff;"> <%= label.name %> </span>
        <% end %>
      </div>

    </div>


 </div>
<% end %>

<%= will_paginate @exercises %>
