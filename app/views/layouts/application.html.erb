<!DOCTYPE html>
<html>
<head>
  <title>CodeHarbor</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default navbar-fixed-top navbar-offset">
    <%= nav_bar fixed: :top, brand: 'Code Harbor', responsive: true do %>
        <%= menu_group do %>
          <%= menu_item 'Exercises', exercises_path %>
        <% end %>
        <%= menu_group pull: :right do %>
            <% if not  current_user.nil? %>
              <%= menu_item 'User', user_path(current_user)  %>
                <%= menu_item current_user.email %>
                <%= menu_item 'Log out',  logout_path, method: :delete %>
            <% else %>
              <%= menu_item 'Sign up', new_users_path %>
              <%= menu_item 'Login', login_path %>
            <% end %>
        <% end %>
    <% end %>
  </nav>


  <div class="container" style="margin-top: 100px">

    <div class="col-md-12">
      <%= yield %>
    </div>
  </div>

  <%= yield :modals %>

 </body>
</html>
