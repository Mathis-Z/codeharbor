<p id="notice"><%= notice %></p>

<h1>Exercise:</h1>
<p>
  <strong>Title:</strong>
  <%= @exercise.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @exercise.description %>
</p>

<p>
  <strong>Maxrating:</strong>
  <%= @exercise.maxrating %>
</p>

<p>
  <strong>Public:</strong>
  <%= @exercise.public %>
</p>

<h1>Files:</h1>
<% @files.each do |file| %>
<strong>Content:</strong>
<p style="white-space: pre-wrap;"><%= file.content %></p>
<p>
  <strong>Mainfile:</strong>
  <%= file.main %>
</p>
<p>
  <strong>Path:</strong>
  <%= file.path %>
</p>
<p>
  <strong>Filetype:</strong>
  <%= file.filetype %>
</p>
<p>
  <strong>Solution File:</strong>
  <%= file.solution %>
</p>
<p> ____________ </p>

<% end %>


<h1>Tests:</h1>
<% @tests.each do |test| %>
<strong>Content:</strong>
<p style="white-space: pre-wrap;"><%= test.content %></p>
<p>
  <strong>Feedback Message:</strong>
  <%= test.feedback_message %>
</p>
<p>
  <strong>Testing Framework:</strong>
  <%= test.testing_framework.name %>
</p>
<p> ____________ </p>


<% end %>



<%= form_tag(push_external_exercise_path(@exercise), method: "post") do |f| %>

  <%= collection_select(:account_link, :id, AccountLink.all, :id, :account_name) %>

  <%= button_tag %>

<% end %>

<%= link_to 'Edit', edit_exercise_path(@exercise) %> |
